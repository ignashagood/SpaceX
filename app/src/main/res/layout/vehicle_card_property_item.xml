<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/heat_shield"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/first_property_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Material"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/first_property_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wwrwr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/second_property_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp degrees"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_property_name"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/second_property_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wwrwr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_property_name"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/third_property_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size meters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_property_name"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/third_property_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wwrwr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_property_name"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/fourth_property_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dev partner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/third_property_name"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/fourth_property_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wwrwr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/third_property_name"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>